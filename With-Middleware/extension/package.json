{
  "name": "salesforce-data-cloud-assistant",
  "displayName": "Salesforce Data Cloud Assistant",
  "description": "IDE integration for Salesforce Data Cloud with chat-based query interface",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:salesforceDataCloudView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "salesforce-data-cloud",
          "title": "Salesforce Data Cloud",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "salesforce-data-cloud": [
        {
          "id": "salesforceDataCloudView",
          "name": "Data Cloud Assistant",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "salesforceDataCloud.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "salesforceDataCloud.clear",
        "title": "Clear Chat",
        "icon": "$(clear-all)"
      },
      {
        "command": "salesforceDataCloud.settings",
        "title": "Settings",
        "icon": "$(gear)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "salesforceDataCloud.refresh",
          "when": "view == salesforceDataCloudView",
          "group": "navigation"
        },
        {
          "command": "salesforceDataCloud.clear",
          "when": "view == salesforceDataCloudView",
          "group": "navigation"
        },
        {
          "command": "salesforceDataCloud.settings",
          "when": "view == salesforceDataCloudView",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Salesforce Data Cloud Assistant",
      "properties": {
        "salesforceDataCloud.middlewareUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "URL of the middleware server"
        },
        "salesforceDataCloud.apiKey": {
          "type": "string",
          "description": "API key for middleware authentication"
        },
        "salesforceDataCloud.enableDebug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "node-fetch": "^3.3.0"
  }
} 