# Salesforce Data Cloud Middleware Configuration
# Copy this file to .env and update with your actual values

# Application Configuration
ENVIRONMENT=development
DEBUG=false
HOST=localhost
PORT=8000
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Configuration
ENABLE_DOCS=true
ENABLE_MCP=true
API_KEY_HEADER=X-API-Key
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Salesforce Configuration
# Your Salesforce username (email)
SALESFORCE_USERNAME=your_username@yourdomain.com

# Consumer Key from your Connected App
SALESFORCE_CONSUMER_KEY=your_connected_app_consumer_key

# Path to your private key file (relative to middleware directory)
SALESFORCE_PRIVATE_KEY_PATH=config/server.key

# Salesforce instance URL (use https://test.salesforce.com for sandbox)
SALESFORCE_INSTANCE_URL=https://login.salesforce.com

# Salesforce API version
SALESFORCE_API_VERSION=58.0

# Data Cloud Configuration
# Your Data Cloud dataspace name
DATA_CLOUD_DATASPACE=your_dataspace_name

# Data Cloud API version
DATA_CLOUD_API_VERSION=1

# Authentication Configuration
JWT_ALGORITHM=RS256
JWT_EXPIRATION_MINUTES=5
TOKEN_REFRESH_THRESHOLD_MINUTES=10

# Caching Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300
# Redis URL (optional, for production)
# REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Security Configuration
# Comma-separated list of allowed API keys
ALLOWED_API_KEYS=your_api_key_here,another_api_key_here
ENABLE_API_KEY_VALIDATION=true

# MCP Configuration
MCP_SERVER_NAME=salesforce-data-tools
MCP_SERVER_DESCRIPTION=Salesforce Data Cloud integration tools

# Development Settings (change for production)
ENABLE_DOCS=true
ENABLE_MCP=true 